
@{
    ViewBag.Title = "新增系統參數";
}


<div class="content-wrapper">
    <section class="content-header" style="margin-bottom: 15px;">
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i>Home</a></li>
            <li class="active">新增系統參數</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">新增系統參數</h3>
                    </div>
                    <!-- form start -->
                    <form class="form-horizontal" method="post" action="@Url.Action("AddSystemArg")" onsubmit="return formValidation();">
                        <div class="box-body">
                            <div id="keyNameDiv" class="form-group">
                                <label for="keyName" class="col-md-2 control-label">參數名稱</label>
                                <div class="col-md-10">
                                    <input id="keyName" type="text" class="form-control" name="keyName" placeholder="輸入參數名稱">
                                </div>
                            </div>
                            <div id="descriptionDiv" class="form-group">
                                <label for="description" class="col-md-2 control-label">說明</label>
                                <div class="col-md-10">
                                    <input id="description" type="text" class="form-control" name="description" placeholder="輸入說明">
                                </div>
                            </div>
                            <div id="valueDiv" class="form-group">
                                <label for="value" class="col-md-2 control-label">參考值</label>
                                <div class="col-md-10">
                                    <input id="value" type="text" class="form-control" name="value" placeholder="輸入參考值">
                                </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-success pull-right">確認新增</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>