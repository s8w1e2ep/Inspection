@{
    ViewBag.Title = "異常排行-通報來源";
}

<div class="content-wrapper">
    <section class="content-header" style="margin-bottom: 15px;">
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i>Home</a>
            </li>
            <li class="active">異常排行-通報來源</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-info" style="padding: 5px;">
                    <div class="box-header with-border">
                        <h3 class="box-title">篩選條件</h3>
                    </div>
                    <div class="box-body row">
                        <div class="col-md-6 form-group">
                            <label class="control-label col-md-2" for="startDatePicker">開始日期</label>
                            <div class="input-group col-md-8">
                                <div class="input-group-addon">
                                    <i class="fa fa-clock-o"></i>
                                </div>
                                <input type="text" class="form-control pull-right" id="startDatePicker">
                            </div>
                        </div>
                        <div class="col-md-6 form-group">
                            <label class="control-label col-md-2" for="endDatePicker">結束日期</label>
                            <div class="input-group col-md-8">
                                <div class="input-group-addon">
                                    <i class="fa fa-clock-o"></i>
                                </div>
                                <input type="text" class="form-control pull-right" id="endDatePicker">
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button class="btn btn-primary" onclick="query()">確定</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Main content -->
        <div class="row">
            <div class="col-xs-12">
                <h4>前10名異常比例</h4>
                <hr />
                <h4>通報來源</h4>
                <div class="box" style="border-top-color: #0094ff;">
                    <div class="box-body">
                        <table id="abnormalTable" class="row-border" cellspacing="0" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th>通報來源</th>
                                    <th>異常次數</th>
                                    <th>累計異常佔比</th>
                                    <th>詳細異常列表</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<script>
    var startDate = null;
    var endDate = null;

    $(document).ready(function () {
        $('#abnormalTable').DataTable({
            "paging": true,
            "info": false,
            "searching": true,
            "columnDefs": [
                { "targets": 0, "width": "20%", "orderable": true },
                { "targets": 1, "width": "20%", "orderable": true },
                { "targets": 2, "width": "40%", "orderable": true },
                { "targets": 3, "width": "20%", "orderable": false }
            ]
        });

        // single Date picker
        $('#startDatePicker, #endDatePicker').datepicker({
            language: 'zh-TW',
            format: 'yyyy/mm/dd'
        }).on('changeDate', function (ev) {
            startDate = $('#startDatePicker').val();
            endDate = $('#endDatePicker').val();
            $('.datepicker').hide();
        });
    });

    function query() {
        if (startDate === null || startDate === "") {
            alert('請選擇開始日期!');
        } else if (endDate === null || endDate === "") {
            alert('請選擇結束日期!');
        } else if (endDate < startDate) {
            alert('結束日期不能比開始日期早');
        } else {
            setAbnormalTable();
        }
    }

    function setAbnormalTable() {
        $.get(
            'QueryDispatch',
            {
                roomId: $('#roomSelect').val(),
                startDate: startDate,
                endDate: endDate,
            },
            function (data) {
                if (data !== "[]") {
                    for (var record in data) {
                        t.row.add([
                            record.dispatchTime,
                            record.total,
                            record.normal,
                            record.prob
                        ]).draw(false);
                    }
                    $('#errDiv').css('display', 'none');
                } else {
                    $('#errDiv').css('display', 'block');
                }
            },
            'json'
        ).fail(function () {
            alert("抱歉! 伺服器無法接受您的查詢!");
        });
    }
</script>