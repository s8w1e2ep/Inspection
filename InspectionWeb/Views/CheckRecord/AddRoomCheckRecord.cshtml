@model InspectionWeb.Models.ViewModel.ListRoomCheckRecordViewModel

@{
    ViewBag.Title = "AddRoomCheckRecord";
    ViewBag.inspectWork = "active";
    ViewBag.inspecthRecord = "active";
    ViewBag.roomInspectRecord = "active";
}
<!-- datepicker -->
<link href="../../Scripts/datepicker3.css" rel="stylesheet" type="text/css" />
<script src="../../Scripts/jquery-ui.min.js"></script>
<script src="../../Scripts/bootstrap-datepicker.js"></script>
<script src="../../Scripts/locales/bootstrap-datepicker.zh-TW.js"></script>
<!-- data table -->
<script src="../../theme/AdminLTE/plugins/datatables/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="../../theme/AdminLTE/plugins/datatables/jquery.dataTables.min.css">
<!-- column order -->
<script src="../../theme/AdminLTE/plugins/datatables/dataTables.bootstrap.min.js"></script>
<link rel="stylesheet" href="../../theme/AdminLTE/plugins/datatables/dataTables.bootstrap.css">
<script>

    $(function () {
        setRoomCheckRecordTable();
        $('#dispatchDate').datepicker({
            format: "yyyy/mm/dd",
            language: 'zh-TW',
            todayHighlight: true
        })
    });

    function fieldValidation(field) {
        if ($.trim($(field).val()) == '') {
            $(field + 'Div').addClass('has-error');
            $(field + 'Div').val('');
            return false;
        } else {
            $(field + 'Div').removeClass('has-error');
        }
        return true;
    }

    function formValidation() {
        if (fieldValidation('#dispatchDate')) {
            return true;
        }
        return false;
    }

    function setRoomCheckRecordTable() {
        $('#roomCheckRecord1').DataTable({
            'columnDefs': [
                { 'targets': 0, 'width': "30%", 'orderable': false },
                { 'targets': 1, 'width': "35%", 'orderable': false },
                { 'targets': 2, 'width': "35%", 'orderable': false }
            ]
        });
        $('#roomCheckRecord2').DataTable({
            'columnDefs': [
                { 'targets': 0, 'width': "30%", 'orderable': false },
                { 'targets': 1, 'width': "35%", 'orderable': false },
                { 'targets': 2, 'width': "35%", 'orderable': false }
            ]
        });
    }

    function AddCheckRecord(roomId, inspectorId, date, status, type) {
        $.ajax({
            url: '@Url.Action("AddNewRoomRecord")',
            data: $.param({ 'roomId': roomId, 'inspectorId': inspectorId, 'checkDate': date, 'dispatchId': dispatchId, 'status': status, 'checkTimeType': type }),
            type: 'UPDATE',
        }).done(function (msg) {
            console.log(msg);
            if (msg.result == 1) {
                alert("資訊更新成功");
                if (status == 3)
                    window.location = "@Url.Action("AddExhibitionItem", "ReportJob", new { sourceCode = "02" })";
            } else {
                alert(msg.ErrorMsg);
            }
        });
    }
</script>



<div class="wrapper">
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>展示廳巡檢紀錄</h1>
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i>Home</a></li>
                <li class="active">巡檢紀錄</li>
                <li class="active">展示廳巡檢紀錄</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="box box-success">
                        <form class="form-horizontal" method="post" action="@Url.Action("AddRoomCheckRecord")" onsubmit="return formValidation();">
                            <div class="box-header with-border">
                                <div id="dispatchDateDiv" class="form-group">
                                    <div class="col-sm-1">
                                        <label for="dispatchDate" class="control-label">巡檢日期</label>
                                    </div>
                                    <div class="input-group col-sm-2">
                                        <div class="input-group-addon">
                                            <i class="fa fa-clock-o"></i>
                                        </div>
                                        <input type="text" class="form-control pull-right" id="dispatchDate" name="dispatchDate">
                                    </div>
                                    <br/>
                                    <div class="col-sm-1">
                                        <button type="submit" class="btn btn-success">確定</button>
                                    </div>
                                </div>
                            </div><!-- /.box-header -->
                        </form>
                        <div class="box-body">
                            @if (@Model != null && @Model.checkDate != null)
                            {
                                <h4>巡檢日期: @Model.checkDate</h4>
                                <br>
                            }
                            @if (@Model != null && @Model.ErrorMsg != null && !string.IsNullOrEmpty(@Model.ErrorMsg))
                            {
                                <div class="form-group has-error">
                                    <label class="col-sm-2"></label>
                                    <label class="col-sm-10">@Model.ErrorMsg</label>
                                </div>
                            }
                            <br/>
                            @if (@Model != null && @Model.roomInspectionDispatch != null && @Model.ErrorType != 2)
                            {
                            <h4>上午巡檢結果</h4>
                            <table id="roomCheckRecord1" class="row-border" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>展覽廳</th>
                                        <th>上午巡檢人員</th>
                                        <th>結果</th>
                                    </tr>
                                </thead>
                                    <tbody>
                                        @foreach (var item in @Model.roomInspectionDispatch)
                                        {
                                            <tr id="@item.dispatchId">
                                                <td>@item.roomName</td>
                                                <td>@item.inspectorCode1 @item.inspectorName1</td>
                                                <td>
                                                    <a href="#"><button class="btn btn-lg btn-success" onclick="AddCheckRecord('@item.roomId', '@item.inspectorId1', '@Model.checkDate',4, 1)">正常</button></a>
                                                    <a href="#"><button class="btn btn-lg btn-danger" onclick="AddCheckRecord('@item.roomId', '@item.inspectorId1', '@Model.checkDate', 3, 1)">異常通報</button></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                            </table>
                            }
                            <br/>
                            @if (@Model != null && @Model.roomInspectionDispatch != null && @Model.ErrorType != 3)
                            {
                            <h4>下午巡檢結果</h4>
                            <table id="roomCheckRecord2" class="row-border" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>展覽廳</th>
                                        <th>下午巡檢人員</th>
                                        <th>結果</th>
                                    </tr>
                                </thead>
                                    <tbody>
                                        @foreach (var item in @Model.roomInspectionDispatch)
                                        {
                                            <tr id="@item.dispatchId">
                                                <td>@item.roomName</td>
                                                <td>@item.inspectorCode2 @item.inspectorName2</td>
                                                <td>
                                                    <a href="#"><button class="btn btn-lg btn-success" onclick="AddCheckRecord('@item.roomId', '@item.inspectorId2', '@Model.checkDate', 4, 2)">正常</button></a>
                                                    <a href="#"><button class="btn btn-lg btn-danger" onclick="AddCheckRecord('@item.roomId', '@item.inspectorId2', '@Model.checkDate', 3, 2)">異常通報</button></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                            </table>
                            }
                        </div>
                    </div><!-- /.box -->
                </div>
            </div>
        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->
</div><!-- ./wrapper -->
