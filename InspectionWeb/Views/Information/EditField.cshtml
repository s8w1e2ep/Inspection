@model InspectionWeb.Models.ViewModel.FieldAddViewModel
@{
    ViewBag.Title = "EditField";
}

<div class="content-wrapper">
    <section class="content-header" style="margin-bottom: 15px;">
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i>Home</a></li>
            <li class="active">新增場域</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">新增場域</h3>
                    </div>
                        <!-- form start -->
                    
                    @using (Html.BeginForm("EditField", "Information", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="box-body">

                            @Html.HiddenFor(model => model.fieldId)
                            @*場域名稱*@
                            <div class="form-group">
                                @Html.LabelFor(model => model.FieldName, htmlAttributes: new { @class =  "col-sm-2 control-label"})
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.FieldName, new { htmlAttributes= new { @class = "form-control"} })
                                </div>
                            </div>

                            @*說明*@
                            <div class="form-group">
                                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>

                            @*版本*@
                            <div class="form-group">
                                @Html.LabelFor(model => model.Version, htmlAttributes: new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.Version, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>

                            @*場域示意圖*@
                            <div class="form-group">
                                <label for="fieldFigure" class="col-sm-2 control-label">場域示意圖</label>
                                <input class="form-control-static" type="file" id="uploadFigure">
                            </div>
                        
                            @*場域地圖*@
                            <div class="form-group">
                                <label for="fieldMap" class="col-sm-2 control-label">場域地圖</label>
                                <input class="form-control-static" type="file" id="uploadFile">
                            </div>
                            
                            @*建立時間*@
                            <div class="form-group">
                                @Html.LabelFor(model => model.CreateTime, htmlAttributes: new { @class = "col-sm-2 control-label" })
                                <p class="col-sm-10 form-control-static">@Model.CreateTime</p>
                            </div>

                            @*最後更新時間*@
                            <div class="form-group">
                                @Html.LabelFor(model => model.LastUpdateTime, htmlAttributes: new { @class = "col-sm-2 control-label" })
                                <p class="col-sm-10 form-control-static">@Model.LastUpdateTime</p>
                            </div> 
                                                       
                        </div><!-- /.box-body -->


                        <div class="box-footer">
                            <button type="submit" class="btn btn-success pull-right">確認新增</button>
                        </div>

                    }
                </div>
            </div>
        </div>
    </section>
</div>
<script src="~/Scripts/addGroup.js"></script>



