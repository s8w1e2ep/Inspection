@model InspectionWeb.Models.ViewModel.AddAbnormalDefinitionViewModel

@{
    ViewBag.Title = "AddAbnormalDefinition";
    ViewBag.basicData = "active";
    ViewBag.abnormalDefine = "active";
    ViewBag.abnormalAdd = "active";
}

<script>

    function fieldValidation(field) {
        if ($.trim($(field).val()) == '') {
            $(field + 'Div').addClass('has-error');
            $(field + 'Div').val('');
            return false;
        } else {
            $(field + 'Div').removeClass('has-error');
        }
        return true;
    }

    function formValidation() {
        if (fieldValidation('#abnormalCode') && fieldValidation('#abnormalName')) {
            return true;
        }

        return false;
    }

</script>



<div class="wrapper">
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>異常定義<small>異常定義資料管理</small></h1>
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i>Home</a></li>
                <li class="active">新增異常定義資料</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="box box-success">
                        <div class="box-header with-border">
                            <h3 class="box-title">新增異常定義資料</h3>
                        </div><!-- /.box-header -->
                        <!-- form start -->
                        <form class="form-horizontal" method="post" action="@Url.Action("AddAbnormalDefinition")" onsubmit="return formValidation();">
                            <div class="box-body">
                                @if (!string.IsNullOrEmpty(@Model.ErrorMsg)) {
                                    <div class="form-group has-error">
                                        <label class="col-sm-2"></label>
                                        <label class="col-sm-10">@Model.ErrorMsg</label>
                                    </div>
                                    }
                                <div id="abnormalCodeDiv" class="form-group">
                                    <label for="abnormalCode" class="col-sm-2 control-label">異常代碼</label>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" id="abnormalCode" name="abnormalCode" placeholder="輸入異常編號">
                                    </div>
                                </div>
                                <div id="abnormalNameDiv" class="form-group">
                                    <label for="abnormalName" class="col-sm-2 control-label">異常名稱</label>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" id="abnormalName" name="abnormalName" placeholder="輸入異常名稱">
                                    </div>
                                </div>
                            </div><!-- /.box-body -->
                            <div class="box-footer" style="text-align: right;">
                                <button type="submit" class="btn btn-success">確定新增</button>
                            </div>
                        </form>
                    </div><!-- /.box -->
                </div>
            </div>
        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->
</div><!-- ./wrapper -->
