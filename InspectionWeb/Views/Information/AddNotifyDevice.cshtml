@model InspectionWeb.Models.ViewModel.NotifyDeviceAddViewModel

@{
    ViewBag.Title = "新增通報裝置";
}
<!-- x-editable component, Note to include x-editable after core library (bootstrap, jquery-ui)!-->
<link href="~/plugins/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet">
<script src="~/plugins/bootstrap3-editable/js/bootstrap-editable.min.js"></script>
<div class="content-wrapper">
    <section class="content-header" style="margin-bottom: 15px;">
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i>Home</a></li>
            <li class="active">新增通報裝置</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">新增通報裝置</h3>
                    </div>
                    <!-- form start -->
                    <form class="form-horizontal" method="post" action="@Url.Action("AddNotifyDevice")" onsubmit="return formValidation();">
                        <div class="box-body">

                            <div class="form-group">
                                <label for="name" class="col-sm-2 control-label">名稱</label>
                                <div class="col-sm-10">
                                    <input id="name" type="text" class="form-control" name="name" placeholder="裝置類別">
                                </div>
                            </div>
                            
                            <div class ="form-group">
                                <label for="selectSource" class="col-sm-2 control-label">裝置類別</label>
                                <div class="col-sm-3">
                                    <select class="form-control" name="sourceId">
                                        @foreach(var item in Model.sources)
                                        {
                                            <option value="@item.sourceId">"@item.sourceName"</option>
                                        }
                                    </select>
                                 </div>
                            </div>


                            <div class="form-group">
                                <label for="deviceCode" class="col-md-2 control-label">裝置代碼</label>
                                <div class="col-md-10">
                                    <input id="deviceCode" type="text" class="form-control" name="deviceCode" placeholder="裝置代碼">
                                </div>
                            </div>

                            
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-success pull-right">確認新增</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>