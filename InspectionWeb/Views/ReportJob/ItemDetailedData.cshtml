@model InspectionWeb.Models.ViewModel.reportDetailedViewModel

@{
    ViewBag.Title = "通報及人工維修資料";
}
<script>

    $.fn.editable.defaults.mode = 'inline';

    $(document).ready(function () {
        //let display window float obove the line

        $('#happenedTime, #fixDate').daterangepicker({
            timePicker: true,
            timePickerSeconds: true,
            singleDatePicker: true,
            timePickerIncrement: 1,
            format: 'YYYY-MM-DD HH:mm:ss',
            locale: {
                applyLabel: '確認',
                cancelLabel: '取消',
                daysOfWeek: ["日", "一", "二", "三", "四", "五", "六"],
                monthNames: ["一月", "二月", "三月", "四月", "五月", "六月", "七月", "八月", "九月", "十月", "十一月", "十二月"],
            }
        });

        $('#sourceId').editable({
                value: 'Select status',
                source: [
                    @foreach(var data in Model.sources)
                    {
                        <text>{value: '@data.sourceId', text: '@data.sourceName' },</text>
                    }
                ],
                success: function (response) {
                    $('#lastUpdateTime').html(response.lastUpdateTime);
                }
        });
        $('#abnormalId').editable({
            value: 'Select status',
            source: [
                @foreach(var data in Model.abnormals)
                    {
                        <text>{value: '@data.abnormalId', text: '@data.abnormalName' },</text>
                    }
            ],
            success: function (response) {
                $('#lastUpdateTime').html(response.lastUpdateTime);
                $('#abnorExplain').html(response.Message);
            }
        });


        $('#description').editable({
            success: function (response) {
                $('#lastUpdateTime').html(response.lastUpdateTime);
            }
        });

        $('#fixMethod').editable({
            value: 'Select status',
            source: [
                {value: '0', text: '自動排除' },
                {value: '1', text: '人員排除' }
            ],
            success: function (response) {
                $('#lastUpdateTime').html(response.lastUpdateTime);
            }
        });

        $('#isClose').editable({
            value: ['@Model.data.isClose_s'],
            source: {
                1: '是',
            },
            emptytext: '否',
            params: function (params) {
                var data = {};
                data['name'] = params.name;
                data['pk'] = params.pk;
                data['value'] = params.value.join(",");
                    return data;


            },
            success: function (response) {
                $('#lastUpdateTime').html(response.lastUpdateTime);
            }
        });

        $('#isClose').editable({
            value: ['@Model.data.isClose'],
            source: {
                1: '是',
            },
            emptytext: '否',
            params: function (params) {
                var data = {};
                data['name'] = params.name;
                data['pk'] = params.pk;
                data['value'] = params.value.join(",");

                return data;
            },
            success: function (response) {
                $('#last').html(response.lastUpdateTime);
            }
        });
    });
    //function examOK()
    //{

    //    if ($('#isClose').val() === '' && ($('#fixMethod').val() === '' || $('#fixDate').val() === ''))
    //    {
    //        alert("123");
    //    }
    //}

    function UpdateHappenTime() {
       $.post(
            '/ReportJob/UpdateRecord',
            {
                name: 'happenedTime',
                pk: '@Model.data.recordId' ,
                value: $('#happenedTime').val()
            },
            function (data) {
                $('#lastUpdateTime').html(data.lastUpdateTime);
            },
            'json'
        ).fail(function () {
            //console.log(e);
            alert("抱歉! 伺服器無法接受您的資料!");
        });
    }
    function UpdateFixTime() {
       $.post(
            '/ReportJob/UpdateRecord',
            {
                name: 'fixDate',
                pk: '@Model.data.recordId' ,
                value: $('#fixDate').val()
            },
            function (data) {
                $('#lastUpdateTime').html(data.lastUpdateTime);
            },
            'json'
        ).fail(function () {
            //console.log(e);
            alert("抱歉! 伺服器無法接受您的資料!");
        });
    }



</script>

