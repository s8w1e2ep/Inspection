@{
    ViewBag.Title = "常用解決方法檢視/修改";
    ViewBag.basicData = "active";
    ViewBag.solutionManage = "active";
    ViewBag.solutionList = "active";
}

<!-- x-editable component, Note to include x-editable after core library (bootstrap, jquery-ui)!-->
<link href="../../plugins/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet">
<script src="../../plugins/bootstrap3-editable/js/bootstrap-editable.min.js"></script>

<div class="content-wrapper">
    <section class="content-header" style="margin-bottom: 15px;">
        <ol class="breadcrumb">
            <li>
                <a href="/Home/Index"><i class="fa fa-dashboard"></i>Home</a>
            </li>
            <li class="active">常用解決方法檢視/修改</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">常用解決方法檢視/修改</h3>
                    </div>
                    <div class="box-body">
                        <table class="table table-striped table-hover table-bordered" cellspacing="0" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th class="col-md-3">屬性</th>
                                    <th class="col-md-9">設定值</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>方法名稱</td>
                                    <td>
                                        @ViewBag.solutionName
                                    </td>
                                </tr>
                                <tr>
                                    <td>方法說明</td>
                                    <td>
                                        <a href="#" id="description" data-type="text" data-pk="@ViewBag.solutionId" data-url="@Url.Action("UpdateSolution")" data-title="輸入方法說明">@ViewBag.description</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>建立日期</td>
                                    <td>@ViewBag.createTime</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<script>
    

    $.fn.editable.defaults.mode = 'inline';

    $(document).ready(function () {
        // x-editable for user table
        $('#description').editable();
    
    });
</script>
