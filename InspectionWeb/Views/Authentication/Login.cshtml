@{
    ViewBag.Title = "智慧巡檢管理系統";
}

<div class="wrapper">
    <div class="content-wrapper">
        <section class="content-header">
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i>Home</a></li>
                <li class="active">登入</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">登入</h3>
                        </div>
                        <form role="form" method="post" action="@Url.Action("Login", "Authentication")">
                            <div class="box-body">
                                <div class="form-group">
                                    <label for="account">帳號</label>
                                    <input name="account" type="text" class="form-control" id="account" placeholder="輸入帳號">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">密碼</label>
                                    <input name="password" type="password" class="form-control" id="password" placeholder="輸入密碼">
                                </div>
                            </div>
                            <div class="box-footer">
                                <button type="submit" class="btn btn-primary">確定</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>