@model InspectionWeb.Models.ViewModel.SystemArgAddViewModel
@{
    ViewBag.Title = "系統參數檢視/修改";
}

<script>
    $.fn.editable.defaults.mode = 'inline';
    $(document).ready(function () {
        $('#keyName, #description, #value').editable({
            emptytext: "未設定",
        });
    });
  

</script>

<div class="content-wrapper">
    <section class="content-header" style="margin-bottom: 15px;">
        <section class="content-header" style="margin-bottom: 15px;">
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i>Home</a></li>
                <li class="active">系統參數檢視/修改</li>
            </ol>
        </section>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">系統參數檢視/修改</h3>
                    </div>
                    <!-- form start -->

                    <div class="box-body">
                        <table class="table table-striped table-hover table-bordered" cellspacing="0" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th class="col-md-3">屬性</th>
                                    <th class="col-md-9">設定值</th>
                                </tr>
                            </thead>
                            <tbody>
                                @*參數名稱*@
                                <tr>
                                    <td>參數名稱</td>
                                    <td>
                                        <a href="#" id="keyName" data-type="text" data-pk="@Model.Id" data-url="@Url.Action("EditSystemArg")" data-title="輸入軟體名稱">@Model.KeyName</a>
                                    </td>
                                </tr>

                                @*說明*@
                                <tr>
                                    <td>說明</td>
                                    <td>
                                        <a href="#" id="description" data-type="text" data-pk="@Model.Id" data-url="@Url.Action("EditSystemArg")" data-title="輸入說明">@Model.Description</a>
                                    </td>
                                </tr>

                                @*參數值*@
                                <tr>
                                    <td>參數值</td>
                                    <td>
                                        <a href="#" id="value" data-type="text" data-pk="@Model.Id" data-url="@Url.Action("EditSystemArg")" data-title="輸入說明">@Model.Value</a>
                                    </td>
                                </tr>

                              
                            
                            </tbody>
                        </table>
                    </div><!-- /.box-body -->


                </div>
            </div>
        </div>
    </section>
</div>