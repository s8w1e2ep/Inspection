@{
    ViewBag.Title = "新增常用解決方法";
    ViewBag.basicData = "active";
    ViewBag.solutionManage = "active";
    ViewBag.solutionAdd = "active";
}

<div class="content-wrapper">
    <section class="content-header" style="margin-bottom: 15px;">
        <ol class="breadcrumb">
            <li><a href="/Home/Index"><i class="fa fa-dashboard"></i>Home</a></li>
            <li class="active">新增常用解決方法</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">新增常用解決方法</h3>
                    </div>
                    <!-- form start -->
                    <form class="form-horizontal" method="post" action="@Url.Action("AddSolution")" onsubmit="return formValidation();">
                        <div class="box-body">
                            @if (!string.IsNullOrEmpty(ViewBag.ErrorMsg))
                            {
                                <div class="form-group has-error">
                                    <label class="col-sm-2"></label>
                                    <label class="col-sm-10">@ViewBag.ErrorMsg</label>
                                </div>
                            }
                            <div id="" class="form-group">
                                <label for="account" class="col-md-2 control-label">方法說明</label>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" name="description" >
                                </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-success pull-right">確認新增</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

