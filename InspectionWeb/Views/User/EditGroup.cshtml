                                <tr>
                                    <td>使用者群組編號</td>
                                    <td>
                                        C#
                                    </td>
                                </tr>
                                <tr>
                                    <td>群組名稱</td>
                                    <td><a href="#" id="name" data-type="text" data-pk="" data-url="" data-title="輸入群組名稱">ITRI</a></td>
                                </tr>
                                <tr>
                                    <td>系統管理</td>
                                    <td>
                                        <a href="#" id="system" data-name="system" data-type="checklist" data-pk="" data-url="" data-title="系統管理">1</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>使用者管理</td>
                                    <td>
                                        <a href="#" id="manager" data-name="manage" data-type="checklist" data-pk="" data-url="" data-title="使用者管理">0</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>巡檢管理</td>
                                    <td>
                                        <a href="#" id="inspect" data-name="inspect" data-type="checklist" data-pk="" data-url="" data-title="巡檢管理">0</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>一般使用者</td>
                                    <td>
                                        <a href="#" id="general" data-name="general" data-type="checklist" data-pk="" data-url="" data-title="一般使用者">0</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>建立日期</td>
                                    <td>2017-08-08 00:00:00</td>
                                </tr>
                                <tr>
                                    <td>最後更新日期</td>
                                    <td>2017-08-08 00:00:00</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>     
    </section>
</div>
