@model InspectionWeb.Models.ViewModel.GroupAddViewModel

@{
    ViewBag.Title = "新增廠商";
    ViewBag.basicData = "active";
    ViewBag.companyManage = "active";
    ViewBag.companyAdd = "active";
}

<div class="content-wrapper">
    <section class="content-header" style="margin-bottom: 15px;">
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i>Home</a>
            </li>
            <li class="active">新增廠商</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">新增廠商</h3>
                    </div>
                    <!-- form start -->
                    <form class="form-horizontal" method="post" action="@Url.Action("AddCompany")" onsubmit="return formValidation();">
                        <div class="box-body">
                            @if (!string.IsNullOrEmpty(@Model.ErrorMsg))
                            {
                                <div class="form-group has-error">
                                    <label class="col-sm-2"></label>
                                    <label class="col-sm-10">@Model.ErrorMsg</label>
                                </div>
                            }
                            <div id="companyNameDiv" class="form-group">
                                <label for="companyName" class="col-md-2 control-label">公司名稱</label>
                                <div class="col-md-10">
                                    <input id="companyName" type="text" class="form-control" name="companyName" placeholder="輸入公司名稱">
                                </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-success pull-right">確認新增</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
<script>
    $(document).ready(function () {
        // 顯示錯誤提醒
        function fieldValidation(field) {
            if ($.trim($(field).val()) == '') {
                $(field + 'Div').addClass('has-error');
                $(field + 'Div').val('');
                return false;
            } else {
                $(field + 'Div').removeClass('has-error');
            }
            return true;
        }
        // 驗證表單資料是否錯誤
        function formValidation() {
            if (fieldValidation('#companyName')) {
                return true;
            }
            return false;
        }
    });
</script>