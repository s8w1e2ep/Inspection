@model InspectionWeb.Models.ViewModel.ListItemCheckRecordViewModel

@{
    ViewBag.Title = "AddItemCheckRecord";
}


<!-- datepicker -->
<link href="../../Scripts/datepicker3.css" rel="stylesheet" type="text/css" />
<script src="../../Scripts/jquery-ui.min.js"></script>
<script src="../../Scripts/bootstrap-datepicker.js"></script>
<script src="../../Scripts/locales/bootstrap-datepicker.zh-TW.js"></script>
<!-- data table -->
<script src="../../theme/AdminLTE/plugins/datatables/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="../../theme/AdminLTE/plugins/datatables/jquery.dataTables.min.css">
<!-- column order -->
<script src="../../theme/AdminLTE/plugins/datatables/dataTables.bootstrap.min.js"></script>
<link rel="stylesheet" href="../../theme/AdminLTE/plugins/datatables/dataTables.bootstrap.css">

<script>

    $(function () {
        setItemCheckRecordTable();
        $('#dispatchDate').datepicker({
            format: "yyyy/mm/dd",
            language: 'zh-TW',
            todayHighlight: true
        })
    });

    function fieldValidation(field) {
        if ($.trim($(field).val()) == '') {
            $(field + 'Div').addClass('has-error');
            $(field + 'Div').val('');
            return false;
        } else {
            $(field + 'Div').removeClass('has-error');
        }
        return true;
    }

    function formValidation() {
        if (fieldValidation('#dispatchDate')) {
            return true;
        }
        return false;
    }

    function setItemCheckRecordTable() {
        $('#itemCheckRecord').DataTable({
            'columnDefs': [
                { 'targets': 0, 'width': "10%", 'orderable': false },
                { 'targets': 1, 'width': "20%", 'orderable': false },
                { 'targets': 2, 'width': "25%", 'orderable': false },
                { 'targets': 3, 'width': "20%", 'orderable': false },
                { 'targets': 4, 'width': "25%", 'orderable': false }
            ]
        });
    }

    function AddCheckRecord(itemId, inspectorId, date, status, type) {
        $.ajax({
            url: '@Url.Action("AddNewItemRecord")',
            data: $.param({ 'itemId': itemId, 'inspectorId': inspectorId, 'checkDate': date, 'status': status, 'checkTimeType': type }),
            type: 'UPDATE',
        }).done(function (msg) {
            console.log(msg);
            if (msg.result == 1) {
                alert("資訊更新成功");
            } else {
                alert(msg.ErrorMsg);
            }
        });

    }

</script>



<div class="wrapper">
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>體驗設施巡檢紀錄</h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
                <li class="active">巡檢紀錄</li>
                <li class="active">體驗設施巡檢紀錄</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="box box-success">
                        <form class="form-horizontal" method="post" action="@Url.Action("AddItemCheckRecord")" onsubmit="return formValidation();">
                            @if (@Model != null && @Model.ErrorMsg != null && !string.IsNullOrEmpty(@Model.ErrorMsg))
                            {
                                <div class="form-group has-error">
                                    <label class="col-sm-2"></label>
                                    <label class="col-sm-10">@Model.ErrorMsg</label>
                                </div>
                            }
                            <div class="box-header with-border">
                                <div id="dispatchDateDiv" class="form-group">
                                    <div class="col-sm-1">
                                        <label for="dispatchDate" class="control-label">巡檢日期</label>
                                    </div>
                                    <div class="input-group col-md-2">
                                        <div class="input-group-addon">
                                            <i class="fa fa-clock-o"></i>
                                        </div>
                                        <input type="text" class="form-control pull-right" id="dispatchDate" name="dispatchDate">
                                    </div>
                                    <br/>
                                    <div class="col-sm-1">
                                        <button type="submit" class="btn btn-success">確定</button>
                                    </div>
                                </div>
                            </div><!-- /.box-header -->
                        </form>
                    </div>
                    <div class="box box-success">
                            <div class="box-body">
                                @if (@Model != null && @Model.checkDate != null)
                                {
                                    <h4>巡檢日期: @Model.checkDate</h4>
                                    <br>
                                }
                                <table id="itemCheckRecord" class="row-border" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>體驗設施</th>
                                            <th>上午巡檢人員</th>
                                            <th>結果</th>
                                            <th>下午巡檢人員</th>
                                            <th>結果</th>
                                        </tr>
                                    </thead>
                                        @if (@Model != null && @Model.itemInspectionDispatch != null)
                                        {
                                            <tbody>
                                                @foreach (var item in @Model.itemInspectionDispatch)
                                                {
                                                <tr id="@item.dispatchId">
                                                    <td>@item.itemName</td>
                                                    <td>@item.inspectorCode1 @item.inspectorName1</td>
                                                    <td>
                                                        <a href="#"><button class="btn btn-lg btn-success" onclick="AddCheckRecord('@item.itemId', '@item.inspectorId1', '@Model.checkDate', 1, 1)">正常</button></a>
                                                        <a href="#"><button class="btn btn-lg btn-danger">異常通報</button></a>
                                                    </td>
                                                    <td>@item.inspectorCode2 @item.inspectorName2</td>
                                                    <td>
                                                        <a href="#"><button class="btn btn-lg btn-success" onclick="AddCheckRecord('@item.itemId', '@item.inspectorId2', '@Model.checkDate', 1, 2)">正常</button></a>
                                                        <a href="#"><button class="btn btn-lg btn-danger">異常通報</button></a>
                                                    </td>
                                                </tr>
                                                }
                                            </tbody>
                                         }                                   
                                </table>
                            </div>
                     </div><!-- /.box -->
                </div>
            </div>
        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->
</div><!-- ./wrapper -->
