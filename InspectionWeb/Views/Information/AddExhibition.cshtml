@model InspectionWeb.Models.ViewModel.ExhibitionRoomAddViewModel
@{
    ViewBag.Title = "新增展示廳";
}


<div class="content-wrapper">
    <section class="content-header" style="margin-bottom: 15px;">
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i>Home</a></li>
            <li class="active">新增展示廳</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">新增展示廳</h3>
                    </div>
                    <!-- form start -->
                    <form class="form-horizontal" method="post" action="@Url.Action("AddExhibition")" onsubmit="">
                        <div class="box-body">
                            <div id="nameDiv" class="form-group">
                                <label for="exhibitionName" class="col-md-2 control-label">展示廳名稱</label>
                                <div class="col-md-10">
                                    <input id="roomName" type="text" class="form-control" name="roomName" placeholder="輸入展示廳名稱">
                                </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-success pull-right">確認新增</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

