
@{
    ViewBag.Title = "EditReportSource";
}

<!-- data table -->
<script src="../../theme/AdminLTE/plugins/datatables/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="../../theme/AdminLTE/plugins/datatables/jquery.dataTables.min.css">
<!-- column order -->
<script src="../../theme/AdminLTE/plugins/datatables/dataTables.bootstrap.min.js"></script>
<link rel="stylesheet" href="../../theme/AdminLTE/plugins/datatables/dataTables.bootstrap.css">
<!-- x-editable component, Note to include x-editable after core library (bootstrap, jquery-ui)!-->
<link href="../../plugins/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet">
<script src="../../plugins/bootstrap3-editable/js/bootstrap-editable.min.js"></script>

<script>

    $.fn.editable.defaults.mode = 'inline';

    $(document).ready(function () {
        $('#sourceName').editable({
            ajaxOptions: {
                dataType: 'json' //assuming json response
            },
            success: function (response) {
                console.log("return success");
                // change update time
                $('#lastUpdateTime').html(response.lastUpdateTime);
            }, error: function (response) {
                console.log("update error");
            }
        });
        $('#description').editable({
            ajaxOptions: {
                dataType: 'json' //assuming json response
            },
            success: function (response) {
                console.log("return success");
                //    // change update time
                $('#lastUpdateTime').html(response.lastUpdateTime);
            }, error: function (response) {
                console.log("update error");
            }
        });
    })

</script>



<div class="wrapper">
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>故障來源定義<small>故障報告來源定義資料管理</small></h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
                <li class="active">故障來源定義資料檢視/修改</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="box box-success">
                        <div class="box-header with-border">
                            <h3 class="box-title">故障來源定義資料檢視/修改</h3>
                        </div><!-- /.box-header -->
                        <div class="box-body">
                            <table id="sourceTable" class="table table-striped table-hover table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th class="col-md-2">屬性</th>
                                        <th class="col-md-6">設定值</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr><td>來源代碼</td><td><a href="#" id="sourceCode" data-type="text" data-name="sourceCode" data-pk="@Model.sourceId" data-url="@Url.Action("UpdateReportSource")">@Model.sourceCode</a></td></tr>
                                    <tr><td>來源名稱</td><td><a href="#" id="sourceName" data-type="text" data-name="sourceName" data-pk="@Model.sourceId" data-url="@Url.Action("UpdateReportSource")">@Model.sourceName</a></td></tr>
                                    <tr><td>說明</td><td><a href="#" id="description" data-type="text" data-name="description" data-pk="@Model.sourceId" data-url="@Url.Action("UpdateReportSource")">@Model.description</a></td></tr>
                                    <tr><td>建立時間</td><td>@Model.createTime</td></tr>
                                    <tr><td>最新異動時間</td><td id="lastUpdateTime">@Model.lastUpdateTime</td></tr>
                                </tbody>
                            </table>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
            </div>
        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->
</div><!-- ./wrapper -->
